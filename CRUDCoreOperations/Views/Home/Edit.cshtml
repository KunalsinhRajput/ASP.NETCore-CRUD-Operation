@model CRUDCoreOperations.Models.Emp;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Edit Form</h2>
        <form action="Register" method="post">

            <div class="form-group">
                <label for="name"></label>
                <input type="hidden" class="form-control" name="Eid" id="name" placeholder="Enter your name" required value="@Model.Eid">
                <span asp-validation-for="Ename"></span>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="Ename" id="name" placeholder="Enter your name" required value="@Model.Ename">
                <span asp-validation-for="Ename"></span>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="Eaddress" rows="3" placeholder="Enter your address" required value="@Model.Eaddress">
                <span asp-validation-for="Eaddress"></span>
            </div>
            <div class="form-group">
                <label for="mobile">Mobile Number</label>
                <input type="tel" class="form-control" id="mobile" name="MobileNo" placeholder="Enter your mobile number" required value="@Model.MobileNo">
                <span asp-validation-for="MobileNo"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="Update">
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
